{#
  Text-Block â€” param API (deterministic)

  Expects:
  - level: "h3" | "None" (optional; defaults to "None" if omitted)
  - showSubhead: boolean (required if subhead is provided)
  - subhead: string (optional)
  - body: array[string] (optional)
#}

{% set levelResolved = level if level is not undefined else "None" %}

<div class="text-block">

  {% if showSubhead and subhead %}
    {% if levelResolved == "h3" %}
      <h3 class="text-block__subhead">{{ subhead }}</h3>
    {% else %}
      <p class="text-block__subhead">{{ subhead }}</p>
    {% endif %}
  {% endif %}

  {% if body and (body | length) %}
    <div class="text-block__body">
      {% for paragraph in body %}
        <p>{{ paragraph | safe }}</p>
      {% endfor %}
    </div>
  {% endif %}

</div>
