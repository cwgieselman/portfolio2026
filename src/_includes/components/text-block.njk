{#
  Text-Block â€” deterministic param API

  Expects (via textBlockParams):
  - level: "h3" | "None"
  - showSubhead: boolean
  - subhead: string
  - body: array[string]
#}

{% set p = textBlockParams %}

<div class="text-block">

  {% if p.showSubhead and p.subhead %}
    {% if p.level == "h3" %}
      <h3 class="text-block__subhead">{{ p.subhead }}</h3>
    {% else %}
      <p class="text-block__subhead">{{ p.subhead }}</p>
    {% endif %}
  {% endif %}

  {% if p.body and (p.body | length) %}
    <div class="text-block__body">
      {% for paragraph in p.body %}
        <p>{{ paragraph | safe }}</p>
      {% endfor %}
    </div>
  {% endif %}

</div>
