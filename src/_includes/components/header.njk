{#
  Header Component â€” top-level param API

  Params:
  - id (optional)
  - level (optional): "h1" | "h2" (default "h1")
  - headline (required)
  - showEyebrow (optional): boolean (default false)
  - eyebrow (optional)
  - showSubhead (optional): boolean (default false)
  - subhead (optional)
#}

{% set hId = id %}
{% set hLevel = level | default("h1") %}

{# optional element gates: default false if not provided #}
{% set showEyebrowResolved = (showEyebrow | default(false)) %}
{% set showSubheadResolved = (showSubhead | default(false)) %}

{# normalize strings #}
{% set headlineText = (headline | default("") | trim) %}
{% set eyebrowText = (eyebrow | default("") | trim) %}
{% set subheadText  = (subhead  | default("") | trim) %}

<div class="header">

  {% if showEyebrowResolved and eyebrowText %}
    <p class="header__eyebrow">{{ eyebrowText }}</p>
  {% endif %}

  {% if headlineText %}
    <{{ hLevel }}
      class="header__headline"
      {% if hId %}id="{{ hId }}"{% endif %}
    >
      {{ headlineText }}
    </{{ hLevel }}>
  {% else %}
    <!-- HEADER ERROR: missing required param "headline" -->
  {% endif %}

  {% if showSubheadResolved and subheadText %}
    <p class="header__subhead">{{ subheadText }}</p>
  {% endif %}

</div>
