{#
  Header Component â€” top-level param API (Figma truth, no TODO output)

  Expects:
  - id (optional)
  - level (optional): "h1" | "h2" (default "h1")
  - headline (optional): string

  - showEyebrow (optional): boolean (if missing, inferred from eyebrow presence)
  - eyebrow (optional): string

  - showSubhead (optional): boolean (if missing, inferred from subhead presence)
  - subhead (optional): string
#}

{% set hId = id %}
{% set hLevel = level | default("h1") %}

{% set showEyebrowResolved = (showEyebrow if showEyebrow is not undefined else (eyebrow and eyebrow | length)) %}
{% set showSubheadResolved = (showSubhead if showSubhead is not undefined else (subhead and subhead | length)) %}

<div class="header">

  {% if showEyebrowResolved and eyebrow %}
    <p class="header__eyebrow">{{ eyebrow }}</p>
  {% endif %}

  {% if headline %}
    <{{ hLevel }}
      class="header__headline"
      {% if hId %}id="{{ hId }}"{% endif %}
    >
      {{ headline }}
    </{{ hLevel }}>
  {% endif %}

  {% if showSubheadResolved and subhead %}
    <p class="header__subhead">{{ subhead }}</p>
  {% endif %}

</div>
